def append_string_to_names(file_path, append_str):
    try:
        with open(file_path, 'r') as file:
            # Read the names from the file
            names = file.readlines()
        
        # Strip newline characters and append the provided string to each name
        modified_names = [name.strip() + append_str for name in names]
        
        return modified_names
    except FileNotFoundError:
        print(f"The file {file_path} was not found.")
        return []

# Example usage
file_path = 'names.txt'
append_str = 'ABC'
modified_names = append_string_to_names(file_path, append_str)
print(modified_names)
