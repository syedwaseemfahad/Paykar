# Read the file and create a list with "ABC" appended to each name
def append_abc_to_names(file_path):
    try:
        with open(file_path, 'r') as file:
            # Read the names from the file
            names = file.readlines()
        
        # Strip newline characters and append "ABC" to each name
        modified_names = [name.strip() + "ABC" for name in names]
        
        return modified_names
    except FileNotFoundError:
        print(f"The file {file_path} was not found.")
        return []

# Example usage
file_path = 'names.txt'
modified_names = append_abc_to_names(file_path)
print(modified_names)
